      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Teams <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% if @header_team_list.present? %>
          <% for team in @header_team_list %>
