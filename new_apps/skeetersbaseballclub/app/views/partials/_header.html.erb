    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Logged in as <%= "#{current_user.first_name} #{current_user.last_name}" %> <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% if @header_team_list.present? %>
          <% for team in @header_team_list %>
          <li><%= link_to team.name, team %></li>
          <% end %>
          <% end %>
          <li><%= link_to "Dashboard", dashboard_path %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        </ul>
      </li>
      <% else %>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Member Login <b class="caret"></b></a>
        <ul class="dropdown-menu">
        	<div class="home-login-container">
        		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
              <div class="form-group">
                <label class="sr-only">Email</label>
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control", autocomplete: :off, id: "dark-input" %>
              </div>
              <div class="form-group">
                <label class="sr-only">Password</label>
                <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: :off, id: "dark-input" %>
              </div>
              
              <div class="form-group">
              <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
        	</div>
        </ul>
      </li>
      <% end %>
